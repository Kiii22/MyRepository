            <p>Website ini menggunakan cookies penting untuk memastikan fungsionalitasnya dengan baik.</p>
        </div>
        <div class="cookie-buttons">
            <button id="declineCookie" class="cookie-btn cookie-decline">Tolak</button>
            <button id="acceptCookie" class="cookie-btn cookie-accept">Terima</button>
        </div>
    </div>

    <script>
        // Cookie Notice Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const cookieNotice = document.getElementById('cookieNotice');
            const acceptBtn = document.getElementById('acceptCookie');
            const declineBtn = document.getElementById('declineCookie');
            
            // Cek jika user sudah memilih preference cookie
            const cookiePreference = localStorage.getItem('cookiePreference');
            
            if (cookiePreference) {
                cookieNotice.classList.add('hidden');
            }
            
            // Handler untuk terima cookie
            acceptBtn.addEventListener('click', function() {
                localStorage.setItem('cookiePreference', 'accepted');
                cookieNotice.classList.add('hidden');
                alert('Terima kasih! Preferensi cookie telah disimpan.');
            });
            
            // Handler untuk tolak cookie
            declineBtn.addEventListener('click', function() {
                localStorage.setItem('cookiePreference', 'declined');
                cookieNotice.classList.add('hidden');
                alert('Preferensi cookie telah disimpan. Cookies pelacakan tidak akan digunakan.');
            });
            
            // Animasi sederhana untuk timeline items
            const timelineItems = document.querySelectorAll('.timeline-item');
            
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };
            
            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, observerOptions);
            
            // Terapkan animasi pada timeline items
            timelineItems.forEach(item => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                observer.observe(item);
            });
        });
    </script>
